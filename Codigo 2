#include <cstdlib>
#include <iostream>

using namespace std;


void llenarM(int M[][8])
{
      int cont=1;
     for(int i=0;i<=7;i++)
         for(int j=0;j<=7;j++)
             M[i][j]=0;
}

void MostrarM(int M[][8])
{
     cout<<"Tablero"<<endl; 
       for(int i=0;i<=7;i++)
       {
          for(int j=0;j<=7;j++)
             cout<<M[i][j]<<" ";   
             cout<<endl; 
       }
       cout<<endl<<endl;
  
}

